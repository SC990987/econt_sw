<!-- Fast command decoder: https://gitlab.cern.ch/cms-hgcal-firmware/fast-control/-/blob/decoder_map/decode/src/hdl/manager/hgcal_fc_recv_manager.v#L11-27 -->

<node>    
  <node id="reg0" address="0x0">
    <node id="edge_select"             mask="0x1"        permission="rw" description="Edge select (which FC clock edge is used to register the FC data): 0=falling edge, 1=rising edge; default=0."/>
    <node id="polarity"                mask="0x2"        permission="rw" description="Polarity: 0=use FC data as-is, 1=invert FC data; default=0."/>
    <node id="reset_counters_io"       mask="0x1000000"  permission="wo" description="Reset counters:  Write 1 to this bit to reset the counters."/>
    <node id="reset_decoder_io"        mask="0x2000000"  permission="wo" description="Reset decoder: : Write 1 to this bit to reset the decoder."/>
  </node>
  <node id="fw_version"            address="0x4"  permission="ro" description="Firmware version."/>
  <node id="stream_character"      address="0x5"  permission="ro" description="Capture: last 32 bits of fast command data received."/>
  <node id="orbit_sync_count"      address="0x6"  permission="ro" description="Orbit sync counter"/>
  <node id="orbit_count_rst_count" address="0x7"  permission="ro" description="Orbit count reset counter"/>
  <node id="calib_req_count"       address="0x8"  permission="ro" description="Calibrtion required counter"/>
  <node id="calib_l1a_count"       address="0x9"  permission="ro" description="Calibration L1a counter"/>
  <node id="link_reset_count"      address="0xa" permission="ro"  description="Link reset counter"/>
  <node id="l1a_count"             address="0xd" permission="ro"  description="L1 accept counter"/>
</node>
